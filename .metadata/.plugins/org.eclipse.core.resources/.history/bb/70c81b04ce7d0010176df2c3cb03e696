<jsp:include page="footer.jsp"></jsp:include>

<script>
	function add() {
		if(frm.regist_month.value == 0) {
			alert('수강월이 입력되지 않았습니다!');
			frm.regist_month.focus();
			return false;
		} else if(frm.c_name.value == 0) {
			alert('회원명이 선택되지 않았습니다!');
			frm.c_name.focus();
			return false;
		} else if(frm.class_area.value == 0) {
			alert('강의장소가 입력되지 않았습니다!');
			frm.class_area.focus();
			return false;
		} else if(frm.class_name.value == 0) {
			alert('강의명이 선택되지 않았습니다!');
			frm.class_name.focus();
			return false;
		} else {
			alert('수강신청이 정상적으로 완료되었습니다!');
			document.frm.submit();
		}
	}
	
	function res() {
		alert('모든 정보를 지우고 처음부터 다시 입력합니다!');
		document.frm.reset();
		frm.regist_month.focus();
	}
	
	function aa(c_no) {
		document.getElementById("c_no").value = c_no;
	}
	
	function bb(tuition) {
		if(c_no >= 20000)
			document.getElementById("tuition").value = tuition/2;
	}
</script>

