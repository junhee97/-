<script>
	function add() {
		if(frm.drv_date.value == 0) {
			alert('주행일자가 입력되지 않았습니다!')
			frm.drv_date.focus();
			return false;
		}
		else if(frm.car_no.value == 0) {
			alert('차량번호가 입력되지 않았습니다!')
			frm.car_no.focus();
			return false;
		}
		else if(frm.drv_start.value == 0) {
			alert('출발Km가 입력되지 않았습니다!')
			frm.drv_start.focus();
			return false;
		}
		else if(frm.drv_end.value == 0) {
			alert('도착Km가 입력되지 않았습니다!')
			frm.drv_end.focus();
			return false;
		}
		else if(frm.dept_code.value == 0) {
			alert('부서코드가 선택되지 않았습니다!')
			frm.dept_code.focus();
			return false;
		}
		else if(frm.drv_money.value == 0) {
			alert('주유금액이 입력되지 않았습니다!')
			frm.car_no.focus();
			return false;
		}
	}
</script>

